#!/bin/bash
set -e
ssh git.dolphm.com "mkdir ~/repos/$1 && cd ~/repos/$1 && git --bare init"
if [ -d "$1" ]; then
    cd $1
    git remote add origin git.dolphm.com:/home/dolph/repos/$1
    git config branch.master.remote origin
    git config branch.master.merge refs/heads/master
    git push
else
    mkdir $1
    cd $1
    git init
    git remote add origin git.dolphm.com:/home/dolph/repos/$1
    git config branch.master.remote origin
    git config branch.master.merge refs/heads/master
fi
