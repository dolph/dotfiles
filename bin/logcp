#!/bin/bash
set -e

# download entire log sets from logs.openstack.org
# blame https://github.com/apsu for the wget magic

# --recursive: specify recursive download.
# --no-parent: don't ascend to the parent directory.
# --level=NUMBER: maximum recursion depth (inf or 0 for infinite).
# --accept=LIST: comma-separated list of accepted extensions.
# --execute=CMD: execute a `.wgetrc'-style command.
# --follow-tags=LIST: comma-separated list of followed HTML tags.
n wget --recursive --no-parent --level=0 --accept=gz --execute=robots=off --follow-tags=ref,a $1
