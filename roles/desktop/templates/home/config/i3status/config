general {
    output_format = "i3bar"

    colors = true
    color_good = "#859900"
    color_degraded = "#cb4b16"
    color_bad = "#d30102"

    interval = 5
}

order += "cpu_usage"
order += "memory"
order += "battery all"
order += "ethernet _first_"
order += "wireless _first_"

cpu_usage {
    format = "%usage CPU"
    max_threshold = 75
    degraded_threshold = 25
}

memory {
    format = "%percentage_used MEM"
    format_degraded = "CRITICAL %percentage_used MEM"
}

wireless _first_ {
    format_up = "%ip%quality"
    format_down = "wlan"
}

ethernet _first_ {
    format_up = "%ip"
    format_down = "eth"
}

battery all {
    format = "%status %percentage %remaining"
    integer_battery_capacity = true
    format_down = "NO BAT"
    status_chr = "âš¡"
    status_bat = "ðŸ”‹"
    status_unk = ""
    status_full = "ðŸ”‹â˜»"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}
