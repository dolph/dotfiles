general {
    output_format = "i3bar"

    colors = true
    color_good = "#859900"
    color_degraded = "#cb4b16"
    color_bad = "#d30102"

    interval = 5
}

order += "cpu_usage"
order += "memory"
order += "battery all"
order += "ethernet _first_"
order += "wireless _first_"
order += "time"

cpu_usage {
    format = "%usage CPU"
    separator_block_width = 21
    max_threshold = 75
    degraded_threshold = 25
}

memory {
    format = "%percentage_used MEM"
    format_degraded = "CRITICAL %percentage_used MEM"
    separator_block_width = 21
}

wireless _first_ {
    format_up = "%ip%quality"
    format_down = "wlan"
    separator_block_width = 21
}

ethernet _first_ {
    format_up = "%ip"
    format_down = "eth"
    separator_block_width = 21
}

battery all {
    format = "%percentage %status"
    separator_block_width = 21
    integer_battery_capacity = true
    format_down = "NO BAT"
    status_chr = "CHARGING"
    status_bat = "DRAINING"
    status_unk = "BAT"
    status_full = "FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

volume master {
    device = "default"
    format = "%volume"
    format_muted = "%volume (muted)"
}

time {
    format = "%b %e %-l:%M %P "
    separator_block_width = 21
}
