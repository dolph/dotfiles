#!/bin/bash
# repeat a command until it succeeds, then exit

set -e
SLEEP_INTERVAL=1
if [[ "$1" =~ ^[0-9]+$ ]]; then
    SLEEP_INTERVAL="$1"
    shift
fi

((counter=1))
until "$@" ;
do
    echo "Attempt #$counter failed. Retrying..."
    ((counter=counter+1))
    sleep $SLEEP_INTERVAL
done
echo "Tried $counter times before succeeding."
