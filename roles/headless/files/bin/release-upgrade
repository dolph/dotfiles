#!/bin/bash
set -e

if upgrade; then
    source /etc/os-release

    # Ensure dnf-local-plugin is removed/disabled prior to system upgrade
    sudo dnf remove -y python3-dnf-plugin-local

    sudo dnf system-upgrade download --refresh --assumeyes --releasever="$(expr $VERSION_ID + 1)" --allowerasing
    sudo dnf system-upgrade reboot
fi
