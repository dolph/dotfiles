#!/bin/bash
set -e
if [ -n "$(command -v apt )" ]
then
    sudo apt update
    sudo apt upgrade -V -y
    sudo apt autoremove -y
    sudo apt autoclean -y
    sudo apt clean
elif [ -n "$(command -v yum )" ]
then
    sudo yum update -y
fi
if [ -f /var/run/reboot-required ]; then
    echo 'Reboot required! Automatically rebooting...'
    sudo reboot -n
fi
